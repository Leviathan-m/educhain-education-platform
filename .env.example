NODE_ENV=development
PORT=3000

# Database (Postgres example)
DATABASE_URL=postgres://user:password@localhost:5432/educhain
DATABASE_SSL=false

# JWT / Auth
JWT_SECRET=change_me_to_a_strong_secret
JWT_EXPIRES_IN=7d

# Mailer / Email (e.g., SendGrid / Mailgun)
MAILER_PROVIDER=sendgrid
MAILER_API_KEY=your-mailer-api-key
MAILER_FROM=no-reply@yourdomain.com

# AI service key (ai-service)
AI_API_KEY=your_ai_service_api_key

# Blockchain / RPC
CHAIN_RPC_URL=https://rpc.yourchain.example
CONTRACT_ADDRESS=0xYourContractAddress

# Relayer / Meta-tx signer (if used)
RELAYER_PRIVATE_KEY=your_relayer_private_key

# Other (e.g., HRIS)
HRIS_ENDPOINT=https://hris.example/api
HRIS_API_KEY=your_hris_api_key

# Optional observability
SENTRY_DSN=
